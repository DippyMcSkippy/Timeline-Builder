<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.timelinebuilder.UniverseCreateController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextField fx:id="nameField" promptText="Enter Universe Name"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Universe Priority:"/>
        <ComboBox fx:id="priorityComboBox" promptText="Select Priority"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Color:"/>
        <ColorPicker fx:id="colorPicker"/>
        <TextField fx:id="hexColorField" promptText="Hex Color (e.g. #FF5733)" prefWidth="150"/>
    </HBox>

    <Button fx:id="submitButton" text="Create Universe"/>
</VBox>