<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.timelinebuilder.MultiverseDisplayController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Label fx:id="multiverseNameLabel" text="Multiverse Name" style="-fx-font-size: 24px; -fx-font-weight: bold;" alignment="CENTER"/>
                <HBox spacing="10">
                    <Button fx:id="createUniverseButton" text="Create Universe" />
                    <Button fx:id="createEventButton" text="Create Event" />
                </HBox>
                <ScrollPane fitToWidth="true" fitToHeight="false" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
                    <HBox fx:id="universesContainer" spacing="20.0" alignment="TOP_CENTER">
                        <padding>
                            <Insets left="10"/>
                        </padding>
                    </HBox>
                </ScrollPane>
                <!-- Other UI elements can be added here -->
            </children>
        </VBox>
    </children>
</AnchorPane>